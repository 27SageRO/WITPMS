<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wittyly.witpms">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Wittyly"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".ui.activity.ActivityLogin"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ActivityTemp"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activity.ActivityCreateTicket"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Create Ticket"/>

        <activity
            android:name=".ui.activity.ActivityCreateTask"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Create Task"/>

        <activity
            android:name=".ui.activity.ActivityComment"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Comments"/>

    </application>

</manifest>